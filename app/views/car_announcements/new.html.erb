<%= content_for :container_top do %>
  <div class="top-image new-car"></div>
<% end %>

<%= title t(".title") %>

<%= session[:created_announcement] %>
<% unless user_signed_in? %>
  <%= render "announcements/stepper", step: :announcement %>
<% end %>
<div class="row">
  <div class="col-8">
    <%= page_header t(".title") %>
    <%= render 'form', content: @content %>
  </div>

  <div class="col-4">
    <%= render "subscriptions/subscriptions" %>
  </div>
</div>

<% if ask_to_continue? %>
  <%= render "announcements/modal" %>
<% end %>