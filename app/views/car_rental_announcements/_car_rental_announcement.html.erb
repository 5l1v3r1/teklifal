<dl>
  <dt><%= humanize_attribute car_rental_announcement, :pick_up_location %></dt>
  <dd><%= car_rental_announcement.pick_up_location %></dd>

  <dt><%= humanize_attribute car_rental_announcement, :drop_off_location %></dt>
  <% if car_rental_announcement.different_location? %>
    <dd><%= car_rental_announcement.drop_off_location %></dd>
  <% else %>
    <dd><%= t "car_rental_announcements.same_location" %></dd>
  <% end %>

  <dt><%= humanize_attribute car_rental_announcement, :pick_up_time %></dt>
  <dd><%= l car_rental_announcement.pick_up_time, format: :long %></dd>

  <dt><%= humanize_attribute car_rental_announcement, :drop_off_time %></dt>
  <dd><%= l car_rental_announcement.drop_off_time, format: :long %></dd>
</dl>