<dl>
  <dt>Alış Yeri</dt>
  <dd><%= car_rental_announcement.pick_up_location %></dd>

  <dt>İade Yeri</dt>
  <% if car_rental_announcement.different_location %>
    <dd><%= car_rental_announcement.drop_off_location %></dd>
  <% else %>
    <dd>Alış yeri ile aynı</dd>
  <% end %>

  <dt>Alış Tarihi</dt>
  <dd><%= l car_rental_announcement.pick_up_time, format: :long %></dd>

  <dt>İade Tarihi</dt>
  <dd><%= l car_rental_announcement.drop_off_time, format: :long %></dd>
</dl>