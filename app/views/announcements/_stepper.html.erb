<div class="d-flex align-items-center border-bottom pb-3 mb-5">
  <% classes = "step-link d-flex justify-content-center align-items-center p-4" %>
  <% block = proc do %>
    <span class="rounded-circle d-inline-block <%= step == :announcement ? "bg-primary" : "bg-secondary" %> text-white font-weight-bold text-center mr-3"
          style="width: 30px; height: 30px; line-height: 30px">
      1
    </span>
    <span class="<%= step == :announcement ? "text-primary" : "text-muted" %>">
      <%= t "stepper.announcement_information" %>
    </span>
  <% end %>

  <% if step == :user %>
    <%= link_to new_announcement_path_for(params[:content_type], continuing_edit: true), class: classes, &block %>
  <% else %>
    <%= content_tag :div, class: classes, &block %>
  <% end %>

  <div class="line border-top" style="height: 0; min-width: 32px; flex: auto; margin: 0 -10px"></div>

  <div class="d-flex justify-content-center align-items-center p-4">
    <span class="rounded-circle d-inline-block <%= step == :user ? "bg-primary" : "bg-secondary" %> text-white font-weight-bold text-center mr-3"
          style="width: 30px; height: 30px; line-height: 30px">
      2
    </span>
    <span class="<%= step == :user ? "text-primary" : "text-muted" %>">
      <%= t "stepper.user_information" %>
    </span>
  </div>
</div>
