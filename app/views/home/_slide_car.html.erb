<div class="jumbotron mb-0 position-relative" id="new-car-slide">
  <style type="text/css">
    .jumbotron {
      background-size: cover;
      background-position: center center;
    }

    #new-car-slide {
      background-image: 
        linear-gradient(
          rgba(0, 0, 0, 0.8), 
          rgba(0, 0, 0, 0.8)
        ),
        url(<%= asset_path "new-car.jpg" %>);
    }
  </style>

  <div class="row">
    <div class="col-8 text-white">
      <h1>Araba alırken;</h1>
      <h2>bayilerden teklif alın</h2>
      <p>Size bayilerin yaptıkları teklifleri değerlendirin.</p>
      <p>Alırken kazanın.</p>
    </div>

    <div class="col-4">
      <div class="card" style="background-color:rgba(255, 255, 255, 0.6);">
        <div class="card-body">

          <%= form_with model: CarAnnouncement.new.tap { |ca|
                          ca.build_announcement
                        },
                        url: car_new_announcement_path,
                        local: true do |f| %>
            <div class="form-group">
              <label>Marka</label>
              <%= f.select :make,
                CarAnnouncement::BRANDS.collect { |brand| [brand.to_s, brand.to_s] },
                {include_blank: true },
                {class: "form-control"} %>
            </div>
            <div class="form-group">
              <label>Talep</label>
              <%= f.fields_for :announcement do |ann_form| %>
                <%= ann_form.text_field :desc, class: 'form-control' %>
              <% end %>
            </div>

            <%= f.submit "Teklif al", class: "btn btn-primary w-100" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>