<div class="jumbotron mb-0 position-relative" id="new-car-slide">
  <style type="text/css">
    .jumbotron {
      background-size: cover;
      background-position: center center;
    }

    #new-car-slide {
      background-image: 
        linear-gradient(
          rgba(0, 0, 0, 0.8), 
          rgba(0, 0, 0, 0.8)
        ),
        url(<%= asset_path "new-car.jpg" %>);
    }
  </style>

  <div class="row">
    <div class="col-8 text-white">
      <h1>Araba alırken;</h1>
      <h2>bayilerden teklif alın</h2>
      <p>Size bayilerin yaptıkları teklifleri değerlendirin.</p>
      <p>Alırken kazanın.</p>
    </div>

    <div class="col-4">
      <div class="card" style="background-color:rgba(255, 255, 255, 0.6);">
        <div class="card-body">
          <div class="form-group">
            <label>Marka</label>
            <%= select_tag :make,
              options_from_collection_for_select(CarAnnouncement::BRANDS, :to_s, :to_s),
              class: "form-control",
              include_blank: true %>
          </div>
          <div class="form-group">
            <label>Talep</label>
            <%= text_field_tag :desc, nil, class: 'form-control' %>
          </div>
          <button class="btn btn-primary w-100">Teklif Al</button>
        </div>
      </div>
    </div>
  </div>

</div>