<div class="border-bottom">
  <div class="row py-3">
    <div class="col-2 offset-1">
      <% if offer.owner? current_user  %>
        <span class="text-success"><%= offer.user.name %></span>
      <% else %>
        <%= offer.user.name %>  
      <% end %>
    </div>
    <div class="col-8">
      <%= desc offer.desc %>
      <%= time_ago_in_words offer.created_at %>
      <%= render "announcements/attachments", attachments: offer.attachments %>
      <%= link_to 'Edit', edit_announcement_offer_path(@announcement, offer) %>
      <%= link_to 'Destroy', [@announcement, offer], method: :delete,
            data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>