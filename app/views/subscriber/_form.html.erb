<%= form_with(model: subscriber, url: subscriber_path, local: true) do |form| %>
  <div class="row">
    <div class="offset-2 col-8">
      <%= render "form_errors", object: subscriber %>

      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :type %>
        <%= form.select :subscriber_type, 
                        form.object.class.subscriber_types.collect { |type|
                          [ t("subscribers.types.#{type.first}"),
                            type.first ]
                        },
                        {}, {class: "form-control"} %>
      </div>
    </div>
  </div>

  <div class="mt-3 border-top row pt-3">
    <div class="col-8 offset-2">
      <%= form.submit nil, class: "btn btn-success" %>
    </div>
  </div>
<% end %>
